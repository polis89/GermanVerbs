<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verb_checkbox"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_verb_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp" />

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_verb_description"
            android:layout_below="@id/text_verb_name"/>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:id="@+id/verb_progress_bar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            app:rcProgress="50.0"
            app:rcMax="100.0"
            app:rcBackgroundPadding="1dp"
            app:rcProgressColor="@color/colorPrimary"
            app:rcBackgroundColor="@color/colorDivider"
            app:rcRadius="3dp"/>

    </RelativeLayout>

</LinearLayout>